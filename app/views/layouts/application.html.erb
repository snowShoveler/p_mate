
<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>

    <%=  render 'layouts/stylesheets' %>

  </head>
  <body>
   
    <div id="wrapper">
      <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
      <% end %>

      <%= render 'layouts/header' %>
      <hr />
	<div id="page">
         
            <%= yield %>
        
	</div>

      <div style="clear: both;">&nbsp;</div>
      
       <%= render 'layouts/footer' %>
       <%= debug(params) if Rails.env.development? %>
    </div>
   
  </body>
</html>

